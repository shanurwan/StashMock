{
  "name": "StashMock Dev",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/postgres:1": {
      "version": "16",
      "postgresql.conf": {},
      "pg_hba.conf": {}
    },
    "ghcr.io/devcontainers/features/redis:1": {
      "version": "7"
    }
    /* If you later want Docker inside Codespaces, add:
    , "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    */
  },
  "forwardPorts": [8000, 5432, 6379],
  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt && alembic upgrade head",
  "containerEnv": {
    "DATABASE_URL": "postgresql+psycopg://postgres:postgres@localhost:5432/postgres",
    "PYTHONUNBUFFERED": "1",
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONPATH": "/workspaces/${localWorkspaceFolderBasename}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "humao.rest-client"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.formatOnSave": true,
        "python.analysis.typeCheckingMode": "basic"
      }
    }
  },
  "remoteUser": "vscode",
  "updateContentCommand": "",
  "postStartCommand": ""
}
